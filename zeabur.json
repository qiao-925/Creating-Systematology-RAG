{
  "name": "systematology-rag",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "env": {
    "DEEPSEEK_API_KEY": {
      "description": "DeepSeek API 密钥",
      "required": true
    },
    "JWT_SECRET_KEY": {
      "description": "JWT 密钥（至少32字符）",
      "required": true
    },
    "CHROMA_CLOUD_API_KEY": {
      "description": "Chroma Cloud API 密钥",
      "required": true
    },
    "CHROMA_CLOUD_TENANT": {
      "description": "Chroma Cloud Tenant",
      "required": true
    },
    "CHROMA_CLOUD_DATABASE": {
      "description": "Chroma Cloud Database",
      "required": true
    },
    "EMBEDDING_MODEL": {
      "default": "BAAI/bge-base-zh-v1.5"
    },
    "HF_ENDPOINT": {
      "default": "https://hf-mirror.com"
    },
    "APP_PORT": {
      "default": "8000"
    },
    "CORS_ORIGINS": {
      "default": "*"
    }
  },
  "ports": [
    {
      "port": 8000,
      "protocol": "http"
    }
  ]
}
